{
  "env": {
    "jest": true,
    "browser": true,
    "node": true,
    "jquery": true,
    "es2020": true,
    "worker": true,
    "serviceworker": true,
    "webextensions": true
  },
  "extends": [
    "eslint:recommended", 
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "prettier",
    "@typescript-eslint"
  ],
  "rules": {
    "prettier/prettier": "error"
  }
}
